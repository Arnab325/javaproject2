package com.example.studentlms.controller;

import com.example.studentlms.model.Student;
import com.example.studentlms.service.StudentService;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/students")
@CrossOrigin
public class StudentController {

    private final StudentService service;

    public StudentController(StudentService service) {
        this.service = service;
    }

    @GetMapping(value= "/getall")
    public List<Student> getAll() {
        return service.getAll();
    }

    @PostMapping(value= "/add")
    public Student create(
            @RequestParam("name") String name,
            @RequestParam("email") String email,
            @RequestParam("course") String course,
            @RequestParam("uid") Long uid)  {
    	Student student = new Student();
        student.setName(name);
        student.setEmail(email);
        student.setCourse(course);
        student.setUid(uid);
        
        return service.add(student);
    }

    @PutMapping("/update/{Uid}")
    public Student update(@PathVariable Long uid, @RequestBody Student student) {
        student.setUid(uid);
        return service.update(student);
    }


    @DeleteMapping("/delete/{id}")
    public void delete(@PathVariable Long id) {
        service.delete(id);
    }

}
